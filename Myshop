<body>

  <!-- Header -->
  <header>
    <div class="header-left">
      <h1>üõçÔ∏è MyShop</h1>

      <div class="header-filters">
        <input type="text" id="search" placeholder="Search products..." onkeyup="filterProducts()" />

        <select id="category-filter" onchange="filterProducts()">
          <option value="all">All Categories</option>
          <option value="audio">Audio</option>
          <option value="gadgets">Gadgets</option>
          <option value="accessories">Accessories</option>
        </select>

        <select id="price-filter" onchange="filterProducts()">
          <option value="all">All Prices</option>
          <option value="0-1000">Below ‚Çπ1000</option>
          <option value="1000-2000">‚Çπ1000 - ‚Çπ2000</option>
          <option value="2000-5000">Above ‚Çπ2000</option>
        </select>
      </div>
    </div>

    <nav>
        <a href="/naan muthalvan/homes.html">Home</a>
