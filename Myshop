  <script>
    const products = [
      { name: "Wireless Headphones", price: 999, image: "images/headphone.png", category: "audio", rating: 4 },
      { name: "Bluetooth Speaker", price: 799, image: "images/speaker.jpg", category: "audio", rating: 5 },
      { name: "Smart Watch", price: 1499, image: "images/smartwatch.webp", category: "gadgets", rating: 4 },
      { name: "Wireless Earbuds", price: 899, image: "images/earbuds.webp", category: "audio", rating: 3 },
      { name: "Tripod Stand", price: 2000, image: "images/tripod.jpg", category: "accessories", rating: 4 },
      { name: "Gaming Mouse", price: 2999, image: "images/mouse.avif", category: "accessories", rating: 5 },
      { name: "Laptop Cooling Pad", price: 1499, image: "images/pad.jpg", category: "accessories", rating: 4 },
      { name: "Power Bank", price: 1589, image: "images/power bank.jpg", category: "gadgets", rating: 4 },
      { name: "Wireless Keyboard", price: 5999, image: "images/keyboard.jpg", category: "accessories", rating: 5 }

    ];

    let cart = JSON.parse(localStorage.getItem("cart")) || [];
    let wishlist = JSON.parse(localStorage.getItem("wishlist")) || [];
    let ratings = JSON.parse(localStorage.getItem("ratings")) || {};

    document.addEventListener("DOMContentLoaded", () => {
      displayProducts(products);
      updateCounts();
    });

    // ‚≠ê Create star rating
    function createStars(productName, rating) {
      const starsDiv = document.createElement("div");
      starsDiv.className = "stars";
      for (let i = 1; i <= 5; i++) {
        const star = document.createElement("span");
        star.textContent = i <= rating ? "‚≠ê" : "‚òÜ";
        star.onclick = () => rateProduct(productName, i);
        starsDiv.appendChild(star);
      }
      return starsDiv;
    }

    // ‚≠ê Save rating
    function rateProduct(name, rating) {
      ratings[name] = rating;
      localStorage.setItem("ratings", JSON.stringify(ratings));
      displayProducts(products);
    }

    // üõçÔ∏è Display Products
    function displayProducts(list) {
      const container = document.getElementById("product-list");
      container.innerHTML = "";
      document.getElementById("page-title").textContent = "Our Latest Products";

      list.forEach((p) => {
        const isWished = wishlist.some((w) => w.name === p.name);
        const userRating = ratings[p.name] || p.rating;
        const card = document.createElement("div");
        card.className = "product-card";
        card.innerHTML = `
          <img src="${p.image}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>‚Çπ${p.price}</p>
          <button onclick="addToCart('${p.name}')">Add to Cart</button>
          <button onclick="toggleWishlist('${p.name}')">${isWished ? "üíî Remove Wishlist" : "‚ù§Ô∏è Add Wishlist"}</button>
        `;
        const starsDiv = createStars(p.name, userRating);
        card.insertBefore(starsDiv, card.querySelector("p"));
        container.appendChild(card);
      });
    }

    // üõí Cart functions
    function addToCart(name) {
      const item = products.find((p) => p.name === name);
      cart.push(item);
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCounts();
    }

    function removeFromCart(index) {
      cart.splice(index, 1);
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCounts();
      showCart();
    }

    // ‚ù§Ô∏è Wishlist
    function toggleWishlist(name) {
      const item = products.find((p) => p.name === name);
      const index = wishlist.findIndex((w) => w.name === name);
      if (index !== -1) wishlist.splice(index, 1);
      else wishlist.push(item);
      localStorage.setItem("wishlist", JSON.stringify(wishlist));
      updateCounts();
      displayProducts(products);
    }

    // üîç Filters
    function filterProducts() {
      const search = document.getElementById("search").value.toLowerCase();
      const category = document.getElementById("category-filter").value;
      const price = document.getElementById("price-filter").value;
      let filtered = products.filter(
        (p) =>
          p.name.toLowerCase().includes(search) &&
          (category === "all" || p.category === category)
      );
      if (price !== "all") {
        const [min, max] = price.split("-").map(Number);
        filtered = filtered.filter((p) => (max ? p.price >= min && p.price <= max : p.price > min));
      }
      displayProducts(filtered);
    }

    // üßÆ Update Counts
    function updateCounts() {
      document.getElementById("cart-count").textContent = cart.length;
      document.getElementById("wishlist-count").textContent = wishlist.length;
    }

    // ‚ù§Ô∏è Wishlist Page
    function showWishlist() {
      const container = document.getElementById("product-list");
      const title = document.getElementById("page-title");
      title.textContent = "Your Wishlist ‚ù§Ô∏è";
      container.innerHTML = "";
      if (wishlist.length === 0) {
        container.innerHTML = '<p class="empty-msg">Your wishlist is empty.</p>';
        return;
      }
      wishlist.forEach((p) => {
        const div = document.createElement("div");
        div.className = "product-card";
        const userRating = ratings[p.name] || p.rating;
        div.innerHTML = `
          <img src="${p.image}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>‚Çπ${p.price}</p>
          <button onclick="addToCart('${p.name}')">Add to Cart</button>
          <button onclick="toggleWishlist('${p.name}')">üíî Remove</button>
        `;
        const starsDiv = createStars(p.name, userRating);
        div.insertBefore(starsDiv, div.querySelector("p"));
        container.appendChild(div);
      });
    }

    // üõí Cart Page
    function showCart() {
      const container = document.getElementById("product-list");
      const title = document.getElementById("page-title");
      title.textContent = "Your Shopping Cart üõí";
      container.innerHTML = "";
      if (cart.length === 0) {
        container.innerHTML = '<p class="empty-msg">Your cart is empty.</p>';
        return;
      }
      let total = 0;
      cart.forEach((p, i) => {
        total += p.price;
        const div = document.createElement("div");
        div.className = "product-card";
        const userRating = ratings[p.name] || p.rating;
        div.innerHTML = `
          <img src="${p.image}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>‚Çπ${p.price}</p>
          <button onclick="removeFromCart(${i})">üóëÔ∏è Remove</button>
        `;
        const starsDiv = createStars(p.name, userRating);
        div.insertBefore(starsDiv, div.querySelector("p"));
        container.appendChild(div);
      });
      const totalDiv = document.createElement("div");
      totalDiv.className = "cart-total";
      totalDiv.innerHTML = `<h3>Total: ‚Çπ${total}</h3><button class="checkout-btn" onclick="checkout()">Checkout</button>`;
      container.appendChild(totalDiv);
    }

    // ‚úÖ Checkout
    function checkout() {
      if (cart.length === 0) return;
      const container = document.getElementById("product-list");
      container.innerHTML = `
        <div class="checkout-message">
          <h2>‚úÖ Thank you for your purchase!</h2>
          <p>Your order has been successfully placed.</p>
          <p>We‚Äôll send you a confirmation email shortly.</p>
          <button onclick="showProducts()">üõçÔ∏è Continue Shopping</button>
        </div>
      `;
      cart = [];
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCounts();
    }

    function showProducts() {
      document.getElementById("page-title").textContent = "Our Latest Products";
      displayProducts(products);
