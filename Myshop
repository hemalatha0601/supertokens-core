      <a href="#" onclick="showWishlist()">Wishlist (<span id="wishlist-count">0</span>)</a>
      <a href="#" onclick="showCart()">Cart (<span id="cart-count">0</span>)</a>
    </nav>
  </header>

  <!-- Main -->
